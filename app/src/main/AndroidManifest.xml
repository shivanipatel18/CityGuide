<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shivanipatel.cityguide">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />


        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".SplashScreen"
            android:theme="@style/AppTheme1"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterClass"
            android:label="RegisterPage"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".HomePage"
            android:label="HomePage"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".CategoryPage"
            android:label="CategoryPage"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".QuestionPage"
            android:label="QuestionPage"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".HealthcareActivity"
            android:label="ViewAnswerPage"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SubmitAnswerPage"
            android:label="SubmitAnswerPage"
            android:screenOrientation="portrait"/>

        <activity android:name=".AddQuestionPage"
            android:screenOrientation="portrait"/>


        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>

        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" />



    </application>

</manifest>
